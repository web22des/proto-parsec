---
// components/Link.astro
const { href, ...props } = Astro.props;

// Автоматически добавляем BASE_URL и обрабатываем слэши
const resolvedHref = href.startsWith("http") ? href : `${import.meta.env.BASE_URL}${href.replace(/^\//, "")}${href.endsWith("/") || href.includes("#") ? "" : "/"}`;
---

<a href={resolvedHref} {...props}>
    <slot />
</a>
